javascript:(function() {  function success(position) {    var latitude = position.coords.latitude;    var longitude = position.coords.longitude;    var xhr = new XMLHttpRequest();    xhr.onreadystatechange = function() {      if (xhr.readyState === 4 && xhr.status === 200) {        var response = JSON.parse(xhr.responseText);        var zipCode = response.address.postcode;        var zipCodeElement = document.createElement('div');        zipCodeElement.setAttribute('style', 'position: fixed; top: 10px; right: 10px; padding: 10px; background-color: white; border: 1px solid black; z-index: 9999;');        zipCodeElement.textContent = 'Made by WatermelonVR: Your current ZIP code is: ' + zipCode;        var rainbowColors = ['red', 'orange', 'yellow', 'green', 'blue', 'indigo', 'violet'];        var currentIndex = 0;        setInterval(function() {          zipCodeElement.style.color = rainbowColors[currentIndex];          currentIndex = (currentIndex + 1) % rainbowColors.length;        }, 500);        document.body.appendChild(zipCodeElement);      }    };    xhr.open('GET', 'https://nominatim.openstreetmap.org/reverse?format=json&lat=%27 + latitude + %27&lon=%27 + longitude + %27&zoom=18&addressdetails=1%27, true);    xhr.send();  }  function error() {    alert(%27Unable to retrieve your current location.%27);  }  if (navigator.geolocation) {    navigator.geolocation.getCurrentPosition(success, error);  } else {    alert(%27Geolocation is not supported by your browser.%27);  }})();
