javascript:(function() {  var imageUrl = prompt("Enter the URL of the background image:");  if (imageUrl) {    var css = "body { background-image: url('" + imageUrl + "'); }";    var style = document.createElement("style");    style.appendChild(document.createTextNode(css));    document.head.appendChild(style);  }    var popup = document.createElement("div");  popup.style.position = "fixed";  popup.style.top = "20px";  popup.style.left = "20px";  popup.style.padding = "20px";  popup.style.background = "white";  popup.style.border = "1px solid black";  popup.style.zIndex = "9999";  popup.style.fontWeight = "bold";  popup.textContent = "By WatermelonVR";    document.body.appendChild(popup);  var colors = ["red", "orange", "yellow", "green", "blue", "indigo", "violet"];  var currentIndex = 0;  setInterval(function() {    popup.style.color = colors[currentIndex];    currentIndex = (currentIndex + 1) % colors.length;  }, 500);})();
